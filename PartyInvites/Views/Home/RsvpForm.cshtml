@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
    <title>Form</title>
</head>
<body>
    <div class="huge-cover">
        <div class="form-cover">
            <form asp-action="RsvpForm" method="POST">
                <div class="inputs" asp-validation-summary="All">
                    <p>
                        <label asp-for="Name"> Your Name:</label>
                        <input type="text" asp-for="Name" />
                    </p>
                    <p>
                        <label asp-for="Email"> Your Email:</label>
                        <input type="text" asp-for="Email" />
                    </p>
                    <p>
                        <label asp-for="Phone"> Your Phone:</label>
                        <input type="text" asp-for="Phone" />
                    </p>
                    <p>
                        <label asp-for="WillAttend">Will You Attend?</label>
                        <select asp-for="WillAttend">
                            <option value="">Choose</option>
                            <option value="true">Yes, I will attend.</option>
                            <option value="false">No, I won't come.</option>
                        </select>
                    </p>
                    <p>
                        <button type="submit">Submit</button>
                    </p>
                </div>
            </form>
        </div>
    </div>
</body>
</html>