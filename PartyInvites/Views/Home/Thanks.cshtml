@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
</head>
<body>
    <div>
        <h1>Thank you, @Model.Name</h1>

        <p>
            @if (Model.WillAttend == true)
            {
                @: It's great to hear that you are coming!
                <br />

                <h3>Check out all the <a asp-action="ListResponses">people</a> attending.</h3>
            }
            else
            {
                @: I'm sorry to hear that you won't come.
            }
        </p>

        
    </div>
</body>
</html>